generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Tag {
  id        String   @id @default(uuid())
  name      String
  color     String?
  userId    String   @map("user_id") // ref user from auth service
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @map("updated_at")

  @@unique([name, userId]) // ensure each user has a unique tag name
  @@map("tags")
}
